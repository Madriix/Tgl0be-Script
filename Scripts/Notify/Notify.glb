on ^*:UNOTIFY: {
  nt.off $nick $network
  if ( %ntf.tip == 1 ) var %tmp $tip(NTF,Tgl0beSCRIPT : Mes Contacts,2 $+ $nick est dÃ©connectÃ© ( $+ $network $+ ).,5,images/Icones/Tgl0be.ico,$null,$null,$null)
  PlaySkinSound UNotify
